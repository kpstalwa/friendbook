<div class="navigationbar">
<header class = "navbar navbar-fixed-top bg-primary">
	<div class ="container">
		<%= link_to "FriendBook", '#', id: "logo" %>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to "Home", static_pages_home_path %></li>
				<% if user_signed_in? %>
				<li><%= link_to "Find Friends", users_path %></li>
				<li><%= link_to "Notifications", friend_requests_path %></li>
