						<li> <%= link_to "Deactivate Account", '#', method: :delete, data: {confirm: "Are you sure you wish to delete your account?"} %>
						</li>
					</ul>
				</li>
				<%else%>
				<li><%= link_to "Log in", new_user_session_path %></li>
				<%end%>
			</ul>
		</nav>
	</div>

</header>

</div>
